@model Vidly.ViewModels.RandomMovieViewModel

@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    ///  To render a dynamic class, below conditions are applied. if the conditions met, class will be visible, otherwise it will be hidden.

    var className = Model.Customers.Count > 0 ? "popular" : null;
}

<div class="container row p-0 m-0">
    <div class=" col-6 ">
        <h2 class="text-success">Movie List</h2>
    </div>
    <div class="col-12 border p-3">
        <table id="customer_Table" class="table table-hover table-bordered" style="width:100%">
            <thead class="table-light">
                <tr>
                    <th class="@className">
                        @Html.ActionLink(Model.Movie.Name , "details" , new { Model.Movie.Id })
                    </th>
                </tr>

            </thead>
        </table>


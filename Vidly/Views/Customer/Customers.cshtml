@model Vidly.ViewModels.RandomMovieViewModel
<div class="container row p-0 m-0">
    <div class=" col-6 ">
        <h2 class=" text-info ">Customer List</h2>
    </div>
    <div class="col-12 border p-3">


        <table id="customer_Table" class="table table-hover table-bordered" style="width:100%">
            <thead class="table-light">
                <tr>
                    <th>
                        @{
                            var changeTitle = Model.Customers.Count != 0 ? "Customer Name" : "We don't have any customers yet :(";

                            @changeTitle

                        }
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var customer in Model.Customers)
                {
                    <tr>
                        <td>
                            @Html.ActionLink(customer.Name , "details" , new { customer.Id })
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        @if (Model.Customers.Count == 0)
        {
            //var className = "We don't have any customers yet :(";
        }


    </div>
</div>
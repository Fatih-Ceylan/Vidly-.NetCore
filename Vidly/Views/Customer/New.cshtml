@model Customer
@{
    ViewData["Title"] = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>New Customer</h1>

@using (Html.BeginForm("Create" , "Customers"))
{
    <div class="form-group col-5">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name , new { @class = "form-control" })
    </div>
    <div class="form-group col-5">

        @Html.LabelFor(m => m.Birthdate)
        @Html.TextBoxFor(m => m.Birthdate , new { @class = "form-control" })
    </div>


    @*<div class="form-group col-5 custom-checkbox">

            <label>
                @Html.CheckBoxFor(m => m.IsSubscribedToNewsletter) Subscribe to newsletter?
            </label>
        </div>*@


    <div class="custom-control custom-checkbox col-5">
        <input type="checkbox" class="custom-control-input" id="defaultUnchecked" asp-for="IsSubscribedToNewsletter">
        <label class=" form-group custom-control-label ml-3" for="defaultUnchecked">
            Subscribe to newsletter?
        </label>
    </div>
}

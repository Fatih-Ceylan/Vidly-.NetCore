@model IEnumerable<Customer>

<div class="container row p-0 m-0">
    <div class=" col-6 ">
        <h2 class=" text-info ">Customer List</h2>
    </div>
    <div class="col-12 border p-3">


        <table id="customer_Table" class="table table-hover table-bordered" style="width:100%">
            <thead class="table-light">
                <tr>
                    <th>
                        @{
                            var changeTitle = Model.Count() != 0 ? "Customer Name" : "We don't have any customers yet :(";
                            @changeTitle
                        }
                    </th>
                    <th>Discount Rate</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var customer in Model)
                {
                    <tr>
                        <td>
                            @Html.ActionLink(customer.Name , "details" , new { customer.Id })
                        </td>
                        <td>@customer.MembershipType.DiscountRate%</td>
                    </tr>
                }
            </tbody>
        </table>
